  "paths": {
    "/card/status/unlock/{companyId}": {
      "get": {
        "tags": ["card"],
        "summary": "Get all cards to unlock for a company",
        "operationId": "getAllCardsToUnlock",
        "parameters": [
          {
            "name": "companyId",
            "in": "path",
            "required": true,
            "description": "The ID of the company",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of employees with cards to unlock",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string",
                        "description": "Name of the employee"
                      },
                      "cardNumber": {
                        "type": "string",
                        "description": "Card number of the employee"
                      },
                      "id": {
                        "type": "integer",
                        "description": "Media ID"
                      },
                      "receiveddate_tz": {
                        "type": ["string", "null"],
                        "format": "date-time",
                        "description": "Date when the card was received (nullable)"
                      },
                      "receivedby": {
                        "type": ["string", "null"],
                        "description": "Who received the card (nullable)"
                      },
                      "csn": {
                        "type": "string",
                        "description": "CSN value as text"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Internal server error"
                    },
                    "error": {
                      "type": "string",
                      "example": "Error message"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/card/status/update-not-unlock": {
      "put": {
        "tags": ["card"],
        "summary": "Update cards not unlocked",
        "operationId": "updateCardsToUnlock",
        "requestBody": {
          "description": "List of employee IDs whose card statuses need to be updated.",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "employeesId": {
                    "type": "array",
                    "items": {
                      "type": "integer"
                    },
                    "example": [123, 456, 789]
                  }
                },
                "required": ["employeesId"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Cards updated successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "boolean",
                      "example": false
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error or Axios error.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Internal Server error"
                    },
                    "error": {
                      "type": "string",
                      "example": "Error message details"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
